generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Betta{
  id Int @id @default(autoincrement())
  
  name         String
  slug         String @unique
  river        String?
  city         String?
  province     String?
  ph_water     String?
  complex_slug String?
  category     String

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Betta{
  id Int @id @default(autoincrement())
  
  name         String
  slug         String @unique
  river        String?
  city         String?
  province     String?
  phWater     String?
  complexSlug String?
  category     String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}